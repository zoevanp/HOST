
<div class="container-error-edit d-flex justify-content-center">
  <%= render "shared/back_button" %>
  <div class = "error-card form-profile text-center h-100 col-12 col-sm-4">
    <div class="align-items-center position-relative">
      <h2>Log in</h2>
        <%= simple_form_for(User.new, as: :user, url: session_path(:user), data: { turbo: :false }) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
              required: false,
              autofocus: true,
              input_html: { autocomplete: "email" } %>
            <%= f.input :password,
              required: false,
              input_html: { autocomplete: "current-password" } %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Log in", class: "universal-button px-3 py-2"%>
          </div>
        <% end %>
      <%#= render "devise/shared/links" %>
    </div>
  </div>
</div>
