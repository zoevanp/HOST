<div class="grid-cards mt-5">

  <% @my_bookings.each do |booking| %>

    <div class="card-index-room">

      <div class="card-image">
        <img src="https://www.xotels.com/wp-content/uploads/2020/03/hotel-room-type-xotels-hotel-management-company.webp" alt="room image">
      </div>

      <div class="card-description">
        <div class="icon-user">
          <i class="fa-solid fa-user pe-2"></i><p><strong>Host:</strong> <%= booking.host.first_name %> <%= booking.host.last_name %></li>
        </div>
        <div class="icon-calendar">
          <i class="fa-solid fa-calendar pe-2"></i><p><%= booking.departure_date %></p>
        </div>
      </div>

      <div class="card-link">
        <% if booking.status && booking.status_refugee %>
          <%= link_to "See booking", booking_path(booking), class:"btn universal-button" %>
        <% end %>
      </div>

        <div class="container">
          <div class="d-flex justify-content-between">
          <% if current_user.role == "refugee" && booking.status_refugee.nil? %>
            <%= button_to "Decline", decline_booking_path(booking), data: {turbo_method: :delete, turbo_confirm:"Are you sure you are not available ?"}, class: "btn btn-accept-decline" %>
            <%= button_to "Accept", accept_booking_path(booking), method: :patch, style:"text-decoration:none", class: "btn btn-accept-decline"  %>
          <% elsif current_user.role == "refugee" && booking.status_refugee && booking.status.nil? %>
            <p>Pending...</p>
          <% end %>
          </div>
        </div>
        <div class="container">
         <div class="d-flex justify-content-between">
          <% if current_user.role == "host" && booking.status.nil? %>
            <%= button_to "Decline", decline_booking_path(booking), data: {turbo_method: :delete, turbo_confirm:"Are you sure you are not available ?"}, class: "btn btn-accept-decline" %>
            <%= button_to "Accept", accept_booking_path(booking), method: :patch, style:"text-decoration:none", class: "btn btn-accept-decline"%>
          <% elsif current_user.role == "host" && booking.status && booking.status_refugee.nil? %>
          <p>Pending...</p>
          <% end %>
          </div>
        </div>
  <% end %>
</div>
