<div class="container" style="margin-bottom: 100px">
  <h1>Show Room nr: <%= @room.id %></h1>
  <li><%= @room.beds %></li>
  <hr>
  <% if @room.room_pictures.attached? %>
    <% @room.room_pictures.each do |picture| %>
    <%= cl_image_tag picture.key, height:300, width:400, crop: :fill %>
    <% end %>
  <% else %>
    <%= image_tag "https://cdn.britannica.com/22/125622-050-E4DA94ED/Albino-axolotl.jpg", width:200, height:200   %>
  <% end %>
  <hr>
  <%= link_to "Edit this room", edit_room_path(@room) %>
  <hr>
  <%= link_to "Remove this room", room_path(@room), data: { turbo_method: :delete, turbo_confirm: "Are you sure? " }  %>
  <p><%= link_to "See all my rooms", rooms_path %></p>
</div>
