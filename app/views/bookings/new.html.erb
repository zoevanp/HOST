<div class="container-error-edit d-flex justify-content-center col-12 col-sm-4 h-100 w-100 position-relative">
  <%= render "shared/back_button" %>
     <div class = "error-card justify-content-center">
          <h1>Details for Room Tonight</h1>
          <br>
              <%= simple_form_for [@booking] do |f|%>
                  <%= f.input :beds %>
                  <%= f.input :address,
                       input_html: {data: {address_autocomplete_target: "address"}, class: "d-none form-control", required: true },
                        wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}%>
                        <br>
                  <%= f.button :submit, "Book", class: "universal-button px-3 py-2" %>
                <% end %>
         </div>
       </div>
    </div>
</div>
