<div class="container">
<h1> Profile page</h1>
<%= cl_image_tag @user.profile_picture.key, height:300, width:400, crop: :fill %>
<ul>
<li><%= @user.username %></li>
<li><%= @user.first_name %></li>
<li><%= @user.last_name %></li>
<li><%= @user.role %></li>
<% if @user.id == current_user.id %>
  <li><%= @user.identity_number %></li>
<% end %>
</ul>

<% if @user.id == current_user.id %>
  <%= link_to "Edit my profile", edit_user_path(@user)%>
<% end %>
</div>
